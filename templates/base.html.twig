<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/5/solar/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
            <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Roboto">
    <style>
      body,html {
        font-family: 'Roboto', serif;
      
      }
    </style>
        {% endblock %}
       
       
    </head>
    <body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">BLOG</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" href="{{path('app_blog')}}">ARTICLES
            <span class="visually-hidden">(current)</span>
          </a>
        </li>

          {% if app.user %} 
          <li class="nav-item">
          <a class="nav-link" href="{{path('article_new')}}">NEW ARTICLE</a>
          </li>
          
          <li class="nav-item">
          <a class="nav-link" href="#">HELLO {{app.user.firstName }} </a>
          <li class="nav-item">
          <a class="nav-link" href="{{path('app_logout')}}">SIGN  OUT</a>
          </li>
          {% else %}
          <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Sign in</a>
              <div class="dropdown-menu">
                 <a class="dropdown-item" href="{{path('app_login')}}">User</a>
                 <div class="dropdown-divider"></div>
                 <a class="dropdown-item" href="{{path('admin')}}">Admin</a>
             </div>
          </li>
          <li class="nav-item">
          <a class="nav-link" href="{{path("app_registration")}}">REGISTER</a>
          
           </li>
          {% endif %} 
      </ul>
      
    </div>
  </div>
</nav>
      <div class="container">
        {% block body %}{% endblock %}

      </div>
      {% block javascripts %}
       <script src="//code.jquery.com/jquery.js"></script>
       <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
      {% endblock %}
        {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
        
    </body>
</html>
